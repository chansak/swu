<!DOCTYPE html>
<html lang="en" ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
            <script src="~/Content/js/html5shiv.min.js"></script>
            <script src="~/Content/js/respond.min.js"></script>
        <![endif]-->
    @Styles.Render("~/theme/css","~/Content/css")
</head>
<body ng-app="app" layout="column" ng-cloak>
    <div layout="column" layout-fill>
        @RenderBody()
    </div>
    <link href="~/Content/css/summernote.css" rel="stylesheet" />
    <script src="~/Content/js/summernote.min.js"></script>
    @Scripts.Render("~/bundles/ng-lib")
    @Scripts.Render("~/bundles/ng-app", "~/bundles/utilities-lib")
    <script src="~/Content/js/angular-summernote.min.js"></script>
    @RenderSection("scripts", required: false)
    <!-- Google Map Javascript Codes -->
    <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
    <script src="~/Content/js/googlemaps.js"></script>
</body>
</html>
